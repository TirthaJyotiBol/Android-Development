<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grey"
    android:fadingEdge="horizontal"
    android:visibility="visible"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="169dp"
        android:layout_height="164dp"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="50dp"
        app:srcCompat="@drawable/icon" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="240dp"
        android:text="Paradox    Phantoms"
        android:textColor="#E30416"
        android:textSize="28sp"
        android:textStyle="italic|bold" />

    <Button
        android:id="@+id/button_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="311dp"
        android:backgroundTint="@color/black"
        android:onClick="play"
        android:text="Play"
        android:textColor="#EC0000"
        android:textSize="16sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button_pause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="170dp"
        android:layout_marginTop="311dp"
        android:backgroundTint="@color/black"
        android:onClick="pause"
        android:text="Pause"
        android:textColor="#EC0000"
        android:textSize="16sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="311dp"
        android:layout_toRightOf="@id/button_pause"
        android:backgroundTint="@color/black"
        android:onClick="stop"
        android:text="Stop"
        android:textColor="#EC0000"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="380dp"
        android:text="progress"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:textSize="23sp"

        />


    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="230dp"
        android:layout_height="30dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="420dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="450dp"
        android:text="Adjust Volume"
        android:textColor="@color/white"
        android:textSize="23sp"
   />


    <SeekBar
        android:id="@+id/seekBar2"
        android:layout_width="230dp"
        android:layout_height="30dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="480dp" />

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="510dp"
        android:layout_marginRight="30dp"
        android:text="If you find any bugs please report to us"
        android:textColor="@color/white"
        android:textSize="20sp"

        />

    <Button
        android:id="@+id/button_bugs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="290dp"
        android:layout_marginTop="545dp"
        android:layout_marginRight="2dp"
        android:text="Bugs" />


</RelativeLayout>
